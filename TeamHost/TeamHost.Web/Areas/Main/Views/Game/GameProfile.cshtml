@using System.Globalization
@model TeamHost.Shared.Requests.Main.GetById.GetByIdResponse

@{
    ViewBag.Title = "Game Profile";
    Layout = "_Layout";
}

<main class="page-main">
                <ul class="uk-breadcrumb">
                    <li><a href="/Main/Store/GameStore"><span data-uk-icon="chevron-left"></span><span>Back to Store</span></a></li>
                    <li><span>@Model.Name</span></li>
                </ul>
                <h3 class="uk-text-lead">@Model.Name</h3>
                <div class="uk-grid uk-grid-small" data-uk-grid>
                    <div class="uk-width-2-3@xl">
                        <div class="gallery">
                            <div class="js-gallery-big gallery-big">
                                <div class="swiper">
                                    <div class="swiper-wrapper">
                                        @foreach (var imageUrl in Model.ImagesUrls)
                                        {
                                            <div class="swiper-slide"><img src=@imageUrl alt="image"></div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="js-gallery-small gallery-small">
                                <div class="swiper">
                                   <div class="swiper-wrapper">
                                       @foreach (var imageUrl in Model.ImagesUrls)
                                       {
                                           <div class="swiper-slide"><img src=@imageUrl alt="image"></div>
                                       }
                                    </div>
                                </div>
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1-3@xl">
                        <div class="game-profile-card">
                            <div class="game-profile-card__media"><img src="@Model.MainImageUrl" alt="game-profile-card"></div>
                            <div class="game-profile-card__intro"><span>@Model.Description</span></div>
                            <ul class="game-profile-card__list">
                                <li>
                                    <div>Reviews:</div>
                                    <div class="game-card__rating"><span>@Model.Rating</span><i class="ico_star"></i><span class="rating-vote">@Model.RatingsNumber</span></div>
                                </li>
                                <li>
                                    <div>Release date:</div>
                                    <div>@Model.ReleaseDate.Date.ToString(CultureInfo.InvariantCulture)</div>
                                </li>
                                <li>
                                    <div>Developer:</div>
                                    <div>@Model.CompanyName</div>
                                </li>
                                <li>
                                    <div>Platforms:</div>
                                    <div class="game-card__platform">
                                        @foreach (var platformImageUrl in Model.PlatformsImageUrls)
                                        {
                                            <img src="@platformImageUrl" alt=""/>
                                        }
                                    </div>
                                </li>
                            </ul>
                            <ul class="game-profile-card__type">
                                @foreach (var category in Model.Categories)
                                {
                                    <li><span>@category</span></li>
                                }
                            </ul>
                        </div>
                        <div class="game-profile-price">
                            <div class="game-profile-price__value">$@Model.Price USD</div><button class="uk-button uk-button-danger uk-width-1-1" type="button"><span class="ico_shopping-cart"></span><span>Buy Now</span></button><button class="uk-button uk-button-primary uk-width-1-1" type="button"><span class="ico_add-square"></span><span>Add to Favourites</span></button>
                        </div>
                    </div>
                </div>
            </main>
