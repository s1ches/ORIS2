@using TeamHost.Application.Interfaces
@inject IUserClaimsManager claimsManager

@{
    Layout = "_Layout";
    var image = "img/profile.png";
}

@section Scripts
{
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/chat.js"></script>
}

<h3 class="uk-text-lead">Chats</h3>
<input type="hidden" value="@claimsManager.UserId" id="current-user-id">
<div class="uk-grid uk-grid-small" data-uk-grid>
    <div class="uk-width-1-3@l">
        <div class="chat-user-list">
            <div class="chat-user-list__box">
                <div class="chat-user-list__head">
                    <div class="avatar"><img src="~/@image" alt="profile"></div><a class="ico_edit" href="#!"></a><a class="ico_more" href="#!"></a>
                </div>
                <div class="chat-user-list__search">
                    <div class="search">
                        <div class="search__input"><i class="ico_search"></i><input type="search" name="search" placeholder="Search"></div>
                    </div>
                </div>
                <div style="margin-left: 200px;" class="chat-user-list__body">
                </div>
            </div>
        </div>
    </div>
    <div class="uk-width-2-3@l" id="chat-place">
    </div>
</div>